<div class="crumbs">
  <%= link_to t(:'forum.forums_title'), root_path %> <span class="arrow">&rarr;</span>
</div>

<h1><%= t(:'forum.edit_forum') %></h1>

<% form_for :forum,
     :url  => forum_path(@forum),
     :html => { :method => :put } do |f| -%>
<%= render :partial => "form", :object => f %>
<%= submit_tag t(:'forum.save_forum') %> or <%= link_to(t(:'forum.cancel'), forums_path) %>
<% end -%>