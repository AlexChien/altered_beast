
<h3><%= t(:'forum.basics_title') %></h3>


<% if not @user.valid? and @user.errors.on(:login) %>

<p>
  <label for="login"><%= t(:'forum.login_title') %></label></p>
  <p class="help">
    <strong><%= t(:'forum.change_login') %>.</strong>
    <%= t(:'forum.login_field') %>.
  </p>
<p>
  <%= settings.text_field :login %>
</p>
<% end %>

<p>
  <label for="user_email"><%= t(:'forum.email_title') %></label><br />
  <%= settings.text_field :email %>
</p>

<div>
  <label for="user_password"><%= t(:'forum.password_title') %></label><br />
  <p class="entryhelp" style="margin-top:0.5em;"><%= t(:'forum.password_field') %></p>
  <%= settings.password_field :password, :size => 16 %>
  <!-- <span class="entryhelp">(<%= t(:'forum.once') %>)</span><br /> -->
  <%= settings.password_field :password_confirmation, :size => 16 %>
  <span class="entryhelp">(<%= t(:'forum.and_again') %>)</span>
</div>
