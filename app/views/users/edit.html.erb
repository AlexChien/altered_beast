<% content_for :right do %>

<h5><%= t(:'forum.avatars_title') %></h5>

<p><%= t(:'forum.gravatar_notice', :gravatar => %(<a href="http://www.gravatar.com/">gravatar.com</a>) %></p>

<% end %>

<h1><%= t(:'forum.settings_title') %></h1>

<p class="subtitle"><%= t(:'forum.for_user', :user => @user.display_name)%>
	<% if @user.login!=@user.display_name %>
	(<%= @user.login %>)
	<% end %>
	</p>

<%= error_messages_for :user %>

<% form_for :user, :url => user_path(@user), :html => { :method => :put } do |f| -%>
  <%= render :partial => "settings", :object => f %>
  <p><%= submit_tag t(:'forum.change_email_or_password'), :or => link_to(  t(:'forum.cancel'), "/") %></p>
<% end -%>

<br />

<% form_for :user, :url => user_path(@user), :html => { :method => :put } do |f| -%>
  <%= render :partial => "contact_info", :locals => { :settings => f } %>
  <p><%= submit_tag  t(:'forum.update_profile'), :or => link_to(  t(:'forum.cancel'), "/") %></p>
<% end -%>