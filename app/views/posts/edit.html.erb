<h1><%= 'Edit Post'[] %></h1>

<h2><%= link_to h(@post.topic.title), forum_topic_path(@post.forum, @post.topic) %></h2>

<%= link_to('Delete post'[], forum_topic_post_path(:forum_id => @post.forum, :topic_id => @post.topic, :id => @post, :page => params[:page]), 
      :class => "utility", :method => :delete, :confirm => 'Delete this post forever?'[:delete_post_conf]) %>

<%= error_messages_for :topic %>
<% form_for :post, :html => { :method => :put }, 
     :url  => forum_topic_post_path(:forum_id => @post.forum, :topic_id => @post.topic, :id => @post, :page => params[:page]) do |f| -%>
<p id="post_body"><%= f.text_area :body %></p>
<%= submit_tag 'Save'[:save_title] %> or <%= link_to 'cancel'[], forum_topic_path(:forum_id => @post.forum, :id => @post.topic, :page => params[:page]) %>
<% end -%>