<%= form.error_messages %>
<table border="0" cellspacing="0" cellpadding="0" class="noborder nopad wide" id="site_name">
	<tr>
	  <td>
	    <label for="site_name"><%= t(:'forum.site_title') %></label><br />
	    <%= form.text_field :name, :class => "primary" %>
	  </td>
	</tr>
	<tr>
	  <td>
	    <label for="site_description"><%= t(:'forum.site_description') %></label><br />
	    <%= form.text_area :description, :class => "primary", :size => "52x5" %>
	  </td>
	</tr>
	<tr>
	  <td>
	    <label for="site_tagline"><%= t(:'forum.site_tagline') %></label><br />
	    <%= form.text_field :tagline, :class => "primary" %>
	  </td>
	</tr>
	<tr>
	  <td>
	    <label for="site_host"><%= t(:'forum.site_host') %></label><br />
	    http://<%= form.text_field :host %>
	  </td>
	</tr>
</table>
