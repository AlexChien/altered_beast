<div class="crumbs">
  <%= link_to t(:'forum.sites_title'), sites_path %> <span class="arrow">&rarr;</span>
</div>

<h1><%= t(:'forum.edit_site') %></h1>

<% form_for :site,
     :url  => site_path(@site),
     :html => { :method => :put } do |f| -%>
<%= render :partial => "form", :object => f %>
<%= submit_tag t(:'forum.save_site'), :or => link_to(t(:'forum.cancel'), sites_path) %>
<% end -%>