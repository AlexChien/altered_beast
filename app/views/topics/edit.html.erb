<h1><%= t(:'forum.edit_topic') %></h1>

<%= error_messages_for :topic %>
<% form_for :topic,
     :url  => forum_topic_path(@forum, @topic),
     :html => { :method => :put } do |f| -%>
<%= render :partial => "form", :object => f %>
<br />
<%= submit_tag t(:'forum.save_changes') %> or <%= link_to( t(:'forum.cancel'), forum_topic_path(@forum, @topic)) %>
<% end -%>